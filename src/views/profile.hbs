<head>
    <link rel="stylesheet" href="../css/edit.css"><br/><br/>
    <link rel="stylesheet" href="../css/profile.css">
</head>


<div class="container-md mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-body p-4 border-3" style="color: black; background-color: rgb(228, 228, 228); border: none;">
                <div class="mt-2 mb-2 me-5 ms-5">
                    <h1 class="text-center">Profile</h1><br><br>
                    <form class="row g-4" action="/home/group/add" method="POST">
                        <div class="col-md-3">
                            <label class="form-control bg-transparent">name:</label>
                        </div>
                        <div class="col-md-9">
                            <label class="form-control text-center">{{names}} {{lastName}}</label>
                        </div>
                        <div class="col-md-3">
                            <label class="form-control bg-transparent">email:</label>
                        </div>
                        <div class="col-md-9">
                            <label class="form-control text-center">{{email}}</label>
                        </div>
                        <div class="col-md-3">
                            <label class="form-control bg-transparent">username:</label>
                        </div>
                        <div class="col-md-9">
                            <label class="form-control text-center">{{username}}</label>
                        </div>
                        <div class="col-md-3">
                            <label class="form-control bg-transparent">password:</label>
                        </div>
                        <div class="col-md-9">
                            <label class="form-control text-center" style="font-size: 11px;">{{password}}</label>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>