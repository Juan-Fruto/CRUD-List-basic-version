<head>
    <link rel="stylesheet" href="../css/edit.css"><br/><br/><br/>
</head>

<div class="container-md mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-body p-4 border-3" style="color: black; background-color: rgb(228, 228, 228); border: none;">
                <div class="mt-2 mb-2 me-5 ms-5">
                    <h1 class="text-center">Edit student</h1><br>
                    <form class="row" action="/students/{{object._id}}/edit" method="POST">
                        <div class="col-md-2">
                            <label for="name">Name: </label>
                        </div>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="name" placeholder="name" value="{{object.name}}" id="name"><br/>
                        </div>
                        <div class="col-md-2">
                            <label for="name">Grade: </label>
                        </div>
                        <div class="col-md-10">
                            <input type="number" step="0.1" class="form-control" name="subject_grade" placeholder="grade" value="{{object.subject_grade}}" id="grade">
                        </div>
                        <div class="row mt-3">
                            <div class="col-2">
                                <label for="status">Status: </label>
                            </div>
                            <div class="col-sm-10">
                                <div class="form-check form-switch">
                                {{#if object.status}}
                                    <input type="checkbox" name="status" class="form-check-input" checked id="status">
                                {{else}}
                                    <input type="checkbox" name="status" class="form-check-input" id="status">
                                {{/if}}
                                </div>
                            </div>
                        </div>
                        <div class="d-grid gap-2 mt-3">
                            <button class="btn btn-primary">update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
